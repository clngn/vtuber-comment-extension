{
  "name": "みんなよう見とる",
  "version": "0.1",
  "description": "設定したアカウントの発言を拾って通知",
  "permissions": ["storage", "notifications"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "run_at": "document_end",
      "all_frames": true,
      "matches": ["https://*.youtube.com/live_chat*"],
      "js": ["watch.js"]
    }
  ],
  "content_security_policy": "script-src 'self' https://code.getmdl.io/; object-src 'self'",
  "manifest_version": 2
}
